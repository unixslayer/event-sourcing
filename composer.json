{
    "name": "unixslayer/event-source",
    "description": "Event Sourcing implementation",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.2.5",
        "moneyphp/money": "^3.3",
        "prooph/pdo-event-store": "^1.12",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.1",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^3.11"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Unixslayer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Unixslayer\\": "tests/"
        }
    },
    "scripts": {
        "ci" : [
            "@check-cs",
            "@psalm",
            "@test"
        ],
        "check-cs": "php-cs-fixer fix --dry-run",
        "fix-cs": "php-cs-fixer fix",
        "psalm":  "psalm",
        "test": "phpunit --configuration phpunit.xml.dist --coverage-text"
    }
}
